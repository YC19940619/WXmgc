.entry{
    width: 600rpx;
    margin: 100rpx auto 200rpx;
}
.entry text{
    height: 50rpx;
    line-height: 60rpx;
    color: #b4b4b4;
    font-size: 24rpx;
}
.entry .phonenum input{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #cdcdcd;
    color: #a1a1a1;
    font-size: 24rpx;
    border-radius: 10rpx;
    padding-left: 24rpx;
    box-sizing: border-box;
}
.verificationcodebox{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-direction: row;
    position: relative;
}
.verificationcodebox input{
    flex: 1;
    padding-left: 24rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
    background: #cdcdcd;
    color: #a1a1a1;
}
.verificationcodebox button{
    font-size: 24rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    background: #c88d6d;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}
.hover{
    opacity: 0.5;
}
