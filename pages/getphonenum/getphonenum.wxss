.container{
    display: flex;
    flex-direction: column;
    background: #f1f1f1;
}
.nav{
    display: none;
    width: 100%;
    height: 50rpx;
    /*display: flex;*/
    justify-content: space-around;
}
.nav text{
    font-size: 24rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-bottom: none;
    color: #333;
}
.nav text.active{
    color: #c88d6d;
    border-bottom: 1px solid #c88d6d;
}
.getphone{
    display: none;
}
.getphone.active{
    display: block;
}
.content{
    flex: 1;
}
.logo{
    display: block;
    width: 200rpx;
    height: 200rpx;
    margin: 100rpx auto 30rpx;
    border-radius: 50%;
    box-shadow: 0 2rpx 2rpx #c88d6d;
}
.getphone:nth-child(2) .logo{
    margin-top: 50rpx;
}
.title{
    text-align: center;
    font-size: 32rpx;
}
.getphonenumbtn{
    width: 80%;
    background: #c88d6d;
    color: #fff;
}
.notice{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 600rpx;
    height: 150rpx;
    background: #fff;
    margin: 150rpx auto;
    font-size: 28rpx;
    padding: 20rpx;
    border-radius:10rpx;
    position: relative;
}
.notice::after{
    content: "";
    position: absolute;
    border-style: solid;
    border-color: transparent transparent #fff;
    border-width: 20rpx;
    top: -38rpx;
    left: 50%;
    margin-left: -10rpx;
}
