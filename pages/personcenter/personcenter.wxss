/**index.wxss**/
.userinfo{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.userinfo .userinfo_bj{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.userinfo .userinfo_avatar{
  display: block;
  width: 150rpx;
  height:150rpx;
  z-index: 2;
  position: absolute;
  left: 50%;
  top: 20rpx;
  margin-left: -75rpx;
}
.userinfo-nickname{
  display: block;
  width: 100%;
  text-align: center;
  z-index: 2;
  position: absolute;
  left: 0;
  top: 200rpx;
  color: #fff;
}
.item{
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  flex-direction: row;
}
.left{
  width: 300rpx;
}
.center{
  flex: 1;
  text-align: right;
  color: #ccc;
  margin-right: 20rpx;
  font-size: 24rpx;
}
.right{
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.right image{
  /*display: block;*/
