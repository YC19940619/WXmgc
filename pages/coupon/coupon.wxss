/* pages/guide/guide.wxss */
.container{
    overflow: scroll;
}
.container{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.nav{
    width: 100%;
    height: 88rpx;
    background: #f5f5f5;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.nav text{
    height: 100%;
    font-size: 28rpx;
    line-height: 88rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    border-bottom: 2rpx solid #f5f5f5;
}
.nav text.active{
    color: #c88d6d;
    border-bottom: 2rpx solid #c88d6d;
}
.content{
    width: 100%;
    flex: 1;
}
.content .list{
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 30rpx;
}
.content .scroll{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.kongtext{
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
}
.kongimg{
    display: block;
    width: 350rpx;
    margin: 150rpx auto 50rpx;
}
.list{
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx;
}
.list .item{
    width: 100%;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 0 10rpx #ccc;
    box-sizing: border-box;
    padding: 20rpx;
    position: relative;
}
.list .item.active{
    box-shadow: 0 0 10rpx #c88d6d;
}
.list .item.active .reduce{
    color: #c88d6d;
}
.list .item.active .gouse{
    background: #c88d6d;
}
.list .item image{
    display: block;
    width: 100%;
}
.title{
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
}
.desc{
    line-height: 50rpx;
    max-height: 100rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-size: 24rpx;
    color: #333;
}
.time{
    line-height: 50rpx;
    font-size: 24rpx;
    color: #333;
}
.reduce{
    line-height: 50rpx;
    font-size: 24rpx;
    color: #ccc;
}
.gouse{
    width: 100rpx;
    height: 50rpx;
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 10rpx;
    background: #ccc;
    color: #fff;
    font-size:24rpx;
}
