.container{
    box-sizing: border-box;
    padding: 100rpx 30rpx;
}
.option{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #f6f6f6;
    box-sizing: border-box;
    padding: 0 30rpx;
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
}
.option.address_details{
    height: 300rpx;
}
.option .left{
    width: 160rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}
.option .right{
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}
.option.address_details .right{
    height: 300rpx;
    line-height: 40rpx;
    padding-top: 20rpx;
}
.save{
    position: fixed;
    left: 50%;
    bottom: 0;
    width: 80%;
    height: 80rpx;
    border-radius: 10rpx;
    background: #c88d6d;
    color: #fff;
    margin: 20rpx 0;
    margin-left: -40%;
    text-align: center;
    font-size: 32rpx;
    line-height: 80rpx;
}
