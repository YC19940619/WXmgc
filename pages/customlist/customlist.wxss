
.item{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 10rpx 35rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.item .left{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.item .left image{
  display: block;
  width: 100%;
}
.item .right{
  flex: 1;
  height: 180rpx;
  position: relative;
}
.item .right text{
  display: block;
  width: 100%;
}
.item .right .name{
  height: 100rpx;
  line-height: 70rpx;
  font-size: 32rpx;
}
.item .right .price{
  height: 80rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #c88d6d;
}
.item .right .go{
  position: absolute;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  right: 35rpx;
  bottom: 20rpx;
  border: 1px solid #c88d6d;
  color: #c88d6d;
  background: #fff;
}